# Application Settings
APP_NAME=HealthChat RAG API
DEBUG=False
VERSION=1.0.0

# API Configuration
API_V1_PREFIX=/api/v1

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://frontend:3000,http://localhost:3001(blueprint visualizer frontend url)

# Database Configuration
DATABASE_URL=mysql+pymysql://healthchat:healthchat123@mysql:3306/healthchat_db

# Vector Database
VECTOR_DB_PATH=./data/vector_db
VECTOR_COLLECTION_NAME=healthcare_documents

# Embedding Model
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
EMBEDDING_DIMENSION=384

# LLM Configuration - NVIDIA NeMo Stack
LLM_PROVIDER=nemo
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=2048

# Ollama Configuration (External GPU Server)
# Replace with your actual Ollama server URL
OLLAMA_BASE_URL=http://your-gpu-server.local:11434
OLLAMA_MODEL=nemotron:70b

# Legacy API Keys (Fallback only - not recommended for production)
OPENAI_API_KEY=
ANTHROPIC_API_KEY=
HUGGINGFACE_API_KEY=

# RAG Configuration
RETRIEVAL_TOP_K=5
RETRIEVAL_SCORE_THRESHOLD=0.3
RERANK_TOP_N=3

# Document Processing
CHUNK_SIZE=512
CHUNK_OVERLAP=50

# NVIDIA NeMo Configuration
NEMO_ENABLED=True
NEMO_GUARDRAILS_ENABLED=True
NEMO_EMBEDDING_MODEL=sentence-transformers/all-mpnet-base-v2
NEMO_RETRIEVER_ENDPOINT=

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/healthchat.log

# Conversation
MAX_CONVERSATION_HISTORY=10